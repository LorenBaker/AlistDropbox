<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppBaseTheme" parent="android:Theme.Light"></style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="btnStyle" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/textSizeNormal</item>
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">0.6</item>
		<item name="android:background">@drawable/btn_genoa</item>
		<item name="android:padding">@dimen/input_edit_text_padding</item>
	</style>

	<style name="btnStyle.Genoa">
		<item name="android:background">@drawable/btn_genoa</item>
	</style>

	<style name="txtInput" parent="@android:style/Widget.EditText">
		<item name="android:textSize">@dimen/textSizeNormal</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/rectangle_linen_black_stroke</item>
		<item name="android:padding">@dimen/input_edit_text_padding</item>
		<item name="android:maxLines">1</item>
		<item name="android:inputType">textAutoCorrect|textCapWords</item>
	</style>

	<style name="txtStyleDialogEntry" parent="@android:style/Widget.EditText">
		<item name="android:textSize">@dimen/textSizeDialog</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingTop">@dimen/dialogEntryTopPadding</item>
		<item name="android:paddingBottom">@dimen/dialogEntryBottomPadding</item>
		<item name="android:paddingLeft">@dimen/dialogEntryLeftPadding</item>
		<item name="android:paddingRight">@dimen/dialogEntryRightPadding</item>
	</style>

	<style name="tvStyleDialogMessage" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/textSizeDialog</item>
		<item name="android:textStyle">normal</item>
		<item name="android:gravity">left</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:padding">@dimen/dialogMessagePadding</item>
	</style>

	<style name="tvStyleHelpText" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/textSizeHelp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:gravity">left</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:background">#FFD3D3D3</item>
		<item name="android:padding">@dimen/helpTextPadding</item>
	</style>

</resources>